            <padding>
                <Insets bottom="32.0" left="32.0" right="32.0" top="96.0"/>
            </padding>
            <children>
                <TextField promptText="username*"/>
                <PasswordField promptText="password*"/>
                <PasswordField promptText="enter the password again*"/>
                <TextField promptText="name"/>
                <TextField promptText="surname"/>
                <TextField promptText="cty"/>
            </children>
        </VBox>
        <Label layoutX="14.0" layoutY="310.0"
               text="* You must complete these fields" textFill="#838383"/>
        <Label layoutX="80.0" layoutY="394.0" text="username is necessary"
               textFill="RED" visible="false"/>
        <Label layoutX="81.0" layoutY="394.0" text="password is necessary"
               textFill="RED" visible="false"/>
        <Label layoutX="65.0" layoutY="394.0" text="passwords are not the same"
               textFill="RED" visible="false"/>
        <Label layoutX="93.0" layoutY="394.0" text="username is busy"
               textFill="RED" visible="false"/>
    </children>
</AnchorPane>
